<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PaySipDetailActivity">
    <TextView
        android:textSize="20sp"
        android:text="Pay Slip"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<TextView
    android:layout_marginRight="@dimen/dp10"
    android:layout_marginLeft="@dimen/dp10"
    android:text="2019-03-01T00:00:00"
    android:textColor="@color/colorBlack"
    android:layout_marginTop="@dimen/dp10"
    android:id="@+id/text_from_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:text="2019-03-01T00:00:00"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/text_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:text="10.000 Ä‘"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/text_net_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:id="@+id/rcv_pay_slip"
        android:elevation="@dimen/dp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>