<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalaryRule.SalaryRule">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:id="@+id/tvSalaryRuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="TÃªn: "
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/toolbar"/>
    <EditText
        android:id="@+id/edtSalaryRuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSalaryRuleName"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tvTimeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Time mode"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/edtSalaryRuleName"/>
    <Spinner
        android:id="@+id/spnTimeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeMode"></Spinner>
    <TextView
        android:id="@+id/tvValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Value"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/spnTimeMode"/>

</RelativeLayout>