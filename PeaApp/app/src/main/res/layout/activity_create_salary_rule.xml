<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalaryRule.CreateSalaryRule">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:id="@+id/tvSalaryRuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Tên: "
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/toolbar"/>
    <EditText
        android:id="@+id/edtSalaryRuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/tvSalaryRuleName"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tvTimeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Time mode"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/edtSalaryRuleName"/>
    <Spinner
        android:id="@+id/spnTimeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeMode"></Spinner>
    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Value: "
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/spnTimeMode"/>
    <EditText
        android:id="@+id/edtSalaryValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvValue"
        android:layout_below="@+id/spnTimeMode"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/tvDurationMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Duration Min:"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="40dp"

        android:layout_below="@+id/edtSalaryValue"/>
    <EditText
        android:id="@+id/edtDurationMin"
        android:layout_width="90dp"
        android:paddingTop="40dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/tvDurationMin"
        android:layout_below="@+id/edtSalaryValue"/>
    <TextView
        android:id="@+id/tvDurationMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration Max:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="40dp"
        android:layout_below="@+id/edtSalaryValue"
        android:layout_toRightOf="@id/edtDurationMin"/>
    <EditText
        android:id="@+id/edtDurationMax"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/tvDurationMax"
        android:layout_below="@+id/edtSalaryValue"/>
    <TextView
        android:id="@+id/tvRateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvDurationMax"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:text="Rate Value: "/>
    <EditText
        android:id="@+id/edtRateValue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/tvRateValue"
        android:layout_below="@+id/edtDurationMax"/>

    <Button
        android:id="@+id/btCreateSalaryRule"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/my_button"
        android:gravity="center"
        android:onClick="clickToCreateSalary"
        android:text="Tạo" />
</RelativeLayout>