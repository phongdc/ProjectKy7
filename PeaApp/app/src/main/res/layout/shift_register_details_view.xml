<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#cccccc"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvShiftRegisterDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvShiftRegisterDetailsName"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:visibility="invisible"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="12">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time:"
                        android:textSize="18dp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tvShiftRegisterDetailsStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:layout_weight="4"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tvShiftRegisterDetailsEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="End"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:layout_weight="4"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/tvShiftRegisterDetailsDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="18dp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tvShiftRegisterDetailsStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textColor="#000000"
                        android:textSize="18dp"

                        android:textAlignment="center"
                        android:layout_weight="4"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tvShiftRegisterDetailsEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="End"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_weight="4"
                        />
                </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:weightSum="3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ca:"
        android:textSize="18dp"
        android:layout_weight="2"
        />

    <TextView
        android:id="@+id/tvShiftRegisterDetailsTimeFrameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TimeFrame"
        android:gravity="right"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_weight="1"
        />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="18dp"
                    android:layout_weight="2"
                    />


                <TextView
                    android:id="@+id/tvShiftRegisterDetailsStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_weight="1"
                    />


            </LinearLayout>


            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>