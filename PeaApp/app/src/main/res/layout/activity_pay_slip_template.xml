<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayslipTemplate.PaySlipTemplateActivity">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <TextView
        android:id="@+id/tvTemplateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Tên: "
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/toolbar"/>
    <EditText
        android:id="@+id/edtTemplateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTemplateName"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tvPayrollDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn bảng lương "
        android:textSize="18dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_below="@+id/edtTemplateName"/>

    <ScrollView
        android:id="@+id/sv_payroll"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/ListBackground"
        android:layout_below="@+id/tvPayrollDetails"
        android:layout_marginTop="-3dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_PayrollDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </ScrollView>

    <Button
        android:id="@+id/btCreatePayslip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_payroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/my_button"
        android:gravity="center"
        android:onClick="clickToCreate"
        android:text="Tạo" />
</RelativeLayout>